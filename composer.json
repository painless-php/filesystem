{
  "name": "painless-php/filesystem",
  "type": "library",
  "description": "Filesystem helper functionality",
  "keywords": [
    "file",
    "directory",
    "filesystem",
    "iterator",
    "helpers"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1",
    "spatie/phpunit-watcher": "^1.22",
    "vlucas/phpdotenv": "^v5.5.0"
  },
  "autoload": {
    "psr-4": {
      "PainlessPHP\\Filesystem\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "test/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit",
    "test-watch": "phpunit-watcher watch"
  }
}
